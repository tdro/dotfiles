[Unit]
Description=Execute events on X11 idle

[Service]
Type=simple
ExecStart=/usr/bin/env sh -c 'while true; do sleep 3 && [ "$(xprintidle)" -gt 60000 ] && %h/.local/bin/scripts/events-idle; done'
Restart=always
RestartSec=5s
SyslogIdentifier=events-idle
CPUQuota=60%
IOWeight=60

[Install]
WantedBy=default.target
