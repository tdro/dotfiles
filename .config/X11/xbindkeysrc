# screen record
"peek"
    Alt + Print

# flameshot screenshots
"flameshot gui"
    Control + Print

# shortcut key check
"urxvt -hold -e xbindkeys --multikey -f $HOME/.config/xbindkeysrc"
    Shift + Mod4 + b

# terminal
"urxvt"
    Mod4 + Return

# terminal tabbed
"urxvt -pe tabbed"
    Control + Mod4 + Return

# terminal multiplexer
"urxvt -e tmux attach"
    Alt + Mod4 + Return
