[user]
  name = tdro
  email = tdro@noreply.example.com

[push]
  default = simple

[color]
  ui = auto

[core]
  editor = vim
  excludesfile = ~/.config/git/ignore

[init]
  defaultBranch = master

[alias]
  ignore   = !git update-index --assume-unchanged
  unignore = !git update-index --no-assume-unchanged
  ignored  = !git ls-files -v | grep '^h'

[diff]
  algorithm = patience

[commit]
  verbose = true
