#!/bin/sh -eu
options="\
First Letter Word
Single Line
Slug
Title Case
Lower Case
Lorem Title
Lorem Paragraph
Thesaurus
KJV Verse Lookup
"
printf "%s" "$options" \
  | dmenu -i -b -p Plumb \
  | while read -r option
    do
      text=$(plumber --option "$option" --text "$(xsel -o)")
      { notify-send "$text" && printf "%s" "$text" | xsel -ib; } \
        || notify-send "Plumber: Clipboard selection is empty"
    done
